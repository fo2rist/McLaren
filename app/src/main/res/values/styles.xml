<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NavigationView" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="SplashScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.MenuFont" parent="@android:style/TextAppearance.Material.Large" >
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextLightHeader">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubheader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextLightSubheader">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSecondaryLightSubheader">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/textSecondaryWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLightBody">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/textPrimaryWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSecondaryLightBody">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/textSecondaryWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerMenu">
        <item name="itemIconTint">@color/menu_item_color</item>
        <item name="itemTextColor">@color/menu_item_color</item>
        <item name="itemTextAppearance">@style/AppTheme.MenuFont</item>
    </style>

</resources>
