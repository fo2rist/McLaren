<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.transmissionscreen.TransmissionActivity"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0px"
    android:background="@android:color/white"
    android:layout_marginLeft="@dimen/margin_half"
    android:layout_marginRight="@dimen/margin_half"
    android:paddingBottom="@dimen/margin_one"
    android:paddingTop="@dimen/margin_one"
    >
    <ImageView
        android:id="@+id/pit_avatar_image"
        android:layout_width="@dimen/thumb_image_size"
        android:layout_height="@dimen/thumb_image_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_mic"
        android:tint="@color/papaya"
        android:contentDescription="@null"
        />
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_one"
        android:layout_marginRight="@dimen/margin_one"
        android:layout_marginBottom="@dimen/margin_half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pit_avatar_image"
        app:layout_constraintRight_toLeftOf="@id/driver_avatar_image"
        style="@style/TextTransmissionSubtitle"
        tools:text="Pitwall"
        />
    <TextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_one"
        android:layout_marginRight="@dimen/margin_one"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintLeft_toRightOf="@id/pit_avatar_image"
        app:layout_constraintRight_toLeftOf="@id/driver_avatar_image"
        style="@style/TextDarkBody"
        tools:text="@tools:sample/lorem"
        />
    <ImageView
        android:id="@+id/driver_avatar_image"
        android:layout_width="@dimen/thumb_image_size"
        android:layout_height="@dimen/thumb_image_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/driver_portrait_norris"
        android:contentDescription="@null"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
