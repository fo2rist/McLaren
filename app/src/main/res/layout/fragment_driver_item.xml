<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >
    <LinearLayout
        android:id="@+id/properties_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/driver_portrait_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:src="@drawable/driver_alonso"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:id="@+id/driver_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_two"
                android:layout_marginEnd="@dimen/margin_two"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/TextLightHeader"
                tools:text="#FA14"
                />
            <TextView
                android:id="@+id/driver_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginEnd="@dimen/margin_two"
                app:layout_constraintTop_toBottomOf="@id/driver_number_text"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/TextLightSubheader"
                tools:text="10th / 54pts"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/team_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_one"
                android:layout_marginTop="@dimen/margin_half"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tint="@color/textPrimaryWhite"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:src="@drawable/ic_menu_driver"
                android:contentDescription="@string/content_description_link_to_driver_s_page"
                android:visibility="gone"
                tools:visibility="visible"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/heritage_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_five"
                app:layout_constraintLeft_toLeftOf="@id/team_link_button"
                app:layout_constraintTop_toTopOf="@id/team_link_button"
                android:tint="@color/textPrimaryWhite"
                android:background="@color/colorAccent"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:src="@drawable/ic_laurel"
                android:contentDescription="@string/content_description_link_to_driver_s_page_at_heritage_section"
                android:visibility="gone"
                tools:visibility="visible"
                />
        </android.support.constraint.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="@dimen/margin_two"
            />
    </LinearLayout>
</ScrollView>