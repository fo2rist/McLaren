<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vertical_margin"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:layout_marginLeft="@dimen/horizontal_margin"
    android:layout_marginRight="@dimen/horizontal_margin"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@android:drawable/ic_media_play" />
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/vertical_padding"
            app:layout_constraintLeft_toRightOf="@+id/image_type"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textPrimaryWhite"
            android:text="Wed 21 Dec"/>
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/vertical_padding"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textSecondaryWhite"
            android:text="18:00"/>

        <TextView
            android:id="@+id/text_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/vertical_padding"
            android:layout_marginRight="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_source"
            android:text="TEST!\nTest"
            android:textColor="@color/textPrimaryBlack"
            android:background="@drawable/background_feed_item"
            android:layout_marginEnd="44dp" />
        <TextView
            android:id="@+id/text_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/vertical_padding"
            android:layout_marginRight="44dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="instagram"
            android:textColor="@color/textSecondaryBlack"
            android:drawableLeft="@drawable/ic_gallery"
            android:background="@drawable/background_feed_item"
            android:layout_marginEnd="44dp" />

        <ImageSwitcher
            android:id="@+id/image_switcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/background_splash"
                android:scaleType="centerCrop" />
        </ImageSwitcher>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
