<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_one"
    android:layout_marginBottom="@dimen/margin_one"
    android:layout_marginStart="@dimen/margin_one"
    android:layout_marginEnd="@dimen/margin_one"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    tools:ignore="RtlHardcoded"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:tint="@color/textPrimaryWhite"
            tools:src="@drawable/ic_video"
            tools:ignore="ContentDescription"
            />
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/margin_half"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@+id/image_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/image_switcher"
            app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@color/textPrimaryWhite"
            tools:text="Wed 21 Dec"
            />
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/margin_half"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textSecondaryWhite"
            tools:text="18:00"
            />
        <ImageSwitcher
            android:id="@+id/image_switcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_content"
            app:layout_constraintTop_toBottomOf="@id/text_date"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                tools:src="@drawable/background_splash"
                />
        </ImageSwitcher>
        <TextView
            android:id="@+id/text_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_half"
            android:paddingLeft="@dimen/margin_two"
            android:layout_marginRight="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_source"
            app:layout_constraintTop_toBottomOf="@id/image_switcher"
            android:textColor="@color/textPrimaryBlack"
            android:background="@drawable/background_feed_item"
            tools:text="TEST!\nTest"
            tools:ignore="RtlSymmetry"
            />
        <TextView
            android:id="@+id/text_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_half"
            android:paddingLeft="@dimen/margin_two"
            android:layout_marginRight="44dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/textSecondaryBlack"
            android:drawableLeft="@drawable/ic_gallery"
            android:background="@drawable/background_feed_item"
            tools:text="Instagram"
            tools:ignore="RtlSymmetry"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
