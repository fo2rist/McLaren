<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_one"
    android:layout_marginTop="@dimen/margin_half"
    android:layout_marginLeft="@dimen/margin_half"
    android:layout_marginRight="@dimen/margin_half"
    android:orientation="vertical"
    tools:context=".ui.CircuitDetailsActivity"
    tools:background="@drawable/background_main"
    >
    <ImageView
        android:id="@+id/image_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        tools:src="@drawable/circuit_monaco"
        />
    <TextView
        android:id="@+id/text_gp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/image_map"
        app:layout_constraintRight_toRightOf="@+id/image_map"
        android:layout_marginRight="@dimen/margin_one"
        android:layout_marginTop="@dimen/margin_one"
        android:singleLine="true"
        android:ellipsize="end"
        style="@style/TextLightBody"
        tools:text="Monaco Grand Prix"
        tools:ignore="Deprecated"
        />
    <TextView
        android:id="@+id/text_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/image_map"
        app:layout_constraintLeft_toLeftOf="@+id/image_map"
        android:layout_marginLeft="@dimen/margin_one"
        android:layout_marginBottom="@dimen/margin_one"
        style="@style/TextSecondaryLightBody"
        tools:text="Monte Carlo\n29 Jun â€“ 01 Jul"
        />
</android.support.constraint.ConstraintLayout>
